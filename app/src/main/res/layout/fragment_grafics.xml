<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <!-- Toolbar personalizada -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Botón de retroceso -->
        <ImageButton
            android:id="@+id/btBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_back_24"
            android:background="@drawable/switch_track"/>

        <!-- Título -->
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="72dp"
            android:text="Gráficos de Sesión"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="20sp" />
    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:id="@+id/encabezado"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"
        android:background="@drawable/fondo_multigraf"
        android:padding="5dp"
        android:layout_margin="5dp">

        <com.blautic.sonda.view.PresureMultipleLinealChart
            android:id="@+id/pmlcSensores"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <SeekBar
            android:id="@+id/svdisplacement"
            style="@style/Widget.App.CircularProgressIndicator"
            android:layout_marginVertical="10dp"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/seek_bar"
            android:max="100"
            android:progress="50"
            android:progressDrawable="@drawable/black_circle"
            android:thumb="@drawable/seek_thumb"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/pmlcSensores" />

    </LinearLayout>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/nestedScrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="5dp"
        android:padding="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/encabezado"
        tools:context=".ui.GraficsFragment">

        <!-- Gráficos -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.blautic.sonda.view.PressureLinealChart
                android:id="@+id/plcSensor1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <com.blautic.sonda.view.PressureLinealChart
                android:id="@+id/plcSensor2"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:layout_marginVertical="5dp" />

            <com.blautic.sonda.view.PressureLinealChart
                android:id="@+id/plcSensor3"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:layout_marginVertical="5dp" />

            <com.blautic.sonda.view.PressureLinealChart
                android:id="@+id/plcSensor4"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:layout_marginVertical="5dp" />

            <com.blautic.sonda.view.PressureLinealChart
                android:id="@+id/plcSensor5"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:layout_marginVertical="5dp" />

            <com.blautic.sonda.view.PressureLinealChart
                android:id="@+id/plcSensor6"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:layout_marginVertical="5dp" />

            <com.blautic.sonda.view.PressureLinealChart
                android:id="@+id/plcSensor7"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:layout_marginVertical="5dp" />


        </LinearLayout>


    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>

